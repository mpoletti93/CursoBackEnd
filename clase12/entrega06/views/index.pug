doctype html
html 
    head
        title="Websockets"
        script(src="/socket.io/socket.io.js")
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/randomcolor/0.6.1/randomColor.min.js") 

    body
        if form
            div(class="main")
                div(class="formBox")
                    h1="Registrar nuevo producto"

                    form(id="productForm")
                        input(type="text" name="title" placeholder="TÃ­tulo" id="title" required)
                        input(type="number" name="price" placeholder="Precio" id="price" required)
                        button(type="submit" class="submit")="Registrar"
                    br
                div(class="chatBox")

                    form(id="chat")
                        input(type="text" placeholder="Nombre o Email" id="email" required)
                        div(class="chatDiv")
                            input(type="text" placeholder="Di algo!" id="message" required)
                            input(type="submit" class="submit" value="Enviar")
                        hr

                        ul(id="chat-messages")

                        hr

                    
        div(class="products")
        
            if form
                a(href="http://localhost:8080/productos")
                    h1(style="color:black")="Productos"
                    
            else
                a(href="http://localhost:8080/")
                    h1(style="color:black")="Registrar nuevo producto"
            
            
            div(id="cardRow")

                if products
                    each product in products
                        div(class="card")
                            h2=product["title"]
                            h3(class="price")="$" + product["price"]

        script.
            const socket = io();

            socket.on('connection', (data) => {

                switch (Object.keys(data).toString()) {
                    
                    case "products":
                        $('#cardRow').empty()
                        data["products"].map( (product) => {
                            $('#cardRow').append(`
    
                                <div class="card">
                                    <h2> ID: ${product["id"]} Producto:${product["title"]}</h2>
                                    <h3 class="price"> Precio: ${"$" + product["price"]}</h3>
                                </div>
                            `)
                        })
                        break;

                    case "messages":
                        $('#chat-messages').empty()
                        data["messages"].map( (message) => {
                            $('#chat-messages').append($('<li>').html(`<span style="color: ${randomColor({luminosity: 'light'})}">${message["date"]} ${message["email"]}: <b>${message["message"]}</b></span>`))
                        })
                        break;
                }
            })

            $("#productForm").submit( () => {
                const title = $('#title').val()
                const price = $('#price').val()

                socket.emit('postProduct', {"title": title, "price": parseInt(price)})

                $('#title').val('')
                $('#price').val('')

                return false; 
            })

            socket.on('postProduct', function(product) {
                console.log("a")
                $('#cardRow').append(`
                    <div class="card">
                        <h2>${product["title"]}</h2>
                        <h3 class="price">${"$" + product["price"]}</h3>
                    </div>
                `)
            })

            $("#chat").submit( () => {
                const email = $('#email').val()
                const message = $('#message').val()

                const d = new Date()
                const date = `[${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}]`

                socket.emit('chatter', {"email":email, "date":date, "message":message})
                $('#message').val('')

                return false; 
            })

            socket.on('chatter', function(message) {
                $('#chat-messages').append($('<li>').html(`<span style="color: ${randomColor({luminosity: 'light'})}">${message["date"]} ${message["email"]}: <b>${message["message"]}</b></span>`))
            })
            
                        

//- ///////////////////// ESTILOS /////////////////////
if !form
    style(type="text/css").
        body {
            display: block;
        }
        
        .products {
            background-color: white;
            width: 100%;
            text-align: center 
        }
        
        .card {
            width: 15%;
        }
        
        @media screen and (max-width: 600px) {

            .main, .products{
                padding: 0px;
                width: 100%;
                background-color: white
            }

            #cardRow {
                margin: 15px;
                display: block;
            }

            .card {
                width: 90%;
            }
            
        }